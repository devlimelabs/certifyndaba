rules_version = "2";
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isCompanyUser(companyId) {
      return exists(/databases/$(database)/documents/companies/$(companyId)/users/$(request.auth.uid))
    }

    function isRequestCandidate() {
      return request.auth.uid == resource.data.candidateID;
    }

    function isInDocumentGroup() {
      return request.auth.token.accountType == resource.data.groups || isAdmin();
    }

    function isUser(userId) {
      return request.auth.uid == userId;
    }

    match /app-nav-links/{document=**} {
      allow read: if isSignedIn() // TODO: add logic for "and group matches"
    }

    match /nav-links/{document=**} {
      allow read: if true
    }

    match /companies/{companyId} {
      allow read: if true
      allow write: if isCompanyUser(companyId)

      match /requests/{requestId} {
        allow read: if isCompanyUser(companyId) || isRequestCandidate() || isAdmin()
        allow create: if isCompanyUser(companyId)
        allow update: if isCompanyUser(companyId) || isRequestCandidate() || isAdmin()
        allow delete: if isAdmin()
      }

      match /users/{userId} {
        allow read: if isUser(userId) || isAdmin()
        allow write: if isUser(userId) || isAdmin()
      }
    }

    match /users/{userId} {
      allow read, write: if isUser(userId) || isAdmin()
    }
  }
}
